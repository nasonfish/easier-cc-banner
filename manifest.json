{
    "manifest_version": 2,
    "name": "Easier CC Banner",
    "description": "Using that stupid CC Banner has never been easier.",
    "version": "1.0",
    "author": "Programming: Han You/Icon: Kon Aoki",
    "background": {
        "scripts": ["core.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "https://banssbp.coloradocollege.edu/*"
            ],
            "js": [
                "jquery-3.2.1.min.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "html/*"
    ],
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "browser_action": {
        "default_icon": "icons/48.png"
    },
    "permissions": [
        "https://banssbp.coloradocollege.edu/*",
        "http://banssbp.coloradocollege.edu/*",
        "webNavigation",
        "storage"
    ]
}